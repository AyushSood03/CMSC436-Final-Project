<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_home"
        android:layout_margin="10dp"
        android:id="@+id/home_button"/>

    <EditText
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:id="@+id/search_bar"
        android:background="@drawable/rounded_corner_view"
        android:layout_toEndOf="@+id/home_button"
        android:layout_marginTop="10dp"
        android:hint="Type location here"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:drawable/ic_menu_search"
        android:backgroundTint="@color/redpinkish"
        android:layout_margin="10dp"
        android:layout_toEndOf="@+id/search_bar"
        android:id="@+id/search_button"/>

    <!-- I don't like how much text this takes either, but this is the easiest way to do this. -->
    <!-- The first TextView containing weather information. -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_corner_view"
        android:layout_below="@id/search_bar"
        android:id="@+id/lp0">

        <TextView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/weatherText0"
            android:background="@drawable/rounded_corner_view"
            android:textSize="20sp"
            android:text="Location\nTemperature\t\t\tWindspeed"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/weatherText0"
            android:background="@android:drawable/btn_star_big_on"
            android:backgroundTint="@color/redpinkish"
            android:text="1"
            android:id="@+id/fav_button0a"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/weatherText0"
            android:layout_toEndOf="@+id/fav_button0a"
            android:background="@android:drawable/btn_star_big_on"
            android:backgroundTint="@color/redpinkish"
            android:text="2"
            android:id="@+id/fav_button0b"/>
    </RelativeLayout>

